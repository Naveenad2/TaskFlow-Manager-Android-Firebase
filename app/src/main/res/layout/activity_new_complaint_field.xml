<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp"
    tools:context=".NewComplaintField">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="347dp"
            android:layout_height="1028dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="Enter the new Complaint details"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/newComplaintName"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:ems="10"
                android:hint="Enter the Consumer number "
                android:inputType="text" />

            <EditText
                android:id="@+id/newComplaintPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:ems="10"
                android:hint="Enter the Phone Number"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Select Priority"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/newComplaintPriorityGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/High"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="High" />

                <RadioButton
                    android:id="@+id/Medium"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Medium" />

                <RadioButton
                    android:id="@+id/Low"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Low" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:id="@+id/TecnicianPhoneNumberview"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="Select a Task"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/newComplaintTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/CableNet"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Cable Net" />

                <RadioButton
                    android:id="@+id/Wire"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Wire" />

                <RadioButton
                    android:id="@+id/Other"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Other
" />

            </RadioGroup>

            <EditText
                android:id="@+id/newComplaintLocation"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="Enter the location"
                android:inputType="text" />

            <EditText
                android:id="@+id/newComplaintDiscription"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="Enter the discription of the task"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <Button
                android:id="@+id/newComplaintConfirmButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0060AB"
                android:text="Confirm"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>
