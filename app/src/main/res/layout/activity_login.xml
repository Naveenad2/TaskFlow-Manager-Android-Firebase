<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/usernameLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Set your username here"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="+91" />

        <EditText
            android:id="@+id/phoneNumberEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:hint="Phone Number"
            android:inputType="phone" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:text="Select one role"
        android:textSize="18sp"
        tools:layout_gravity="center_horizontal" />

    <RadioGroup
        android:id="@+id/userRole"
        android:layout_width="381dp"
        android:layout_height="210dp">

        <RadioButton
            android:id="@+id/Operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operator" />

        <RadioButton
            android:id="@+id/Technician"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Technician" />

        <RadioButton
            android:id="@+id/CollectionAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collection agent" />
    </RadioGroup>

    <TextView
        android:id="@+id/passwordMatchError"
        android:layout_width="374dp"
        android:layout_height="62dp"
        android:gravity="center|center_vertical"
        android:text="Your password does not match"
        android:visibility="gone"
        android:textColor="#FF1100"
        android:textSize="20sp" />

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Register"
        android:textColor="@android:color/background_dark"
        android:background="@drawable/rounded_button"
        android:padding="12dp"
        android:textAllCaps="false"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        tools:textSize="16sp" />

    <Button
        android:id="@+id/gotologinbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to login page"
        android:textColor="#000000" />

</LinearLayout>
